@{
    ViewData["Title"] = "Leburu Poultry Farm - Home";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="~/js/site.js"></script>

<body>
    <!-- Hero Section -->
    <section class="hero-section d-flex align-items-center justify-content-center text-center">
        <div class="hero-content">
            <h1 class="display-5 fw-bold text-white">"A fresh start everyday - Powered by Leburu eggs!"</h1>
            <div class="mt-4">
                <a href="#discover" class="btn btn-outline-light btn-lg me-3">Discover More</a>
                <a href="#purchase" class="btn btn-warning btn-lg">Purchase Now</a>
            </div>
        </div>
    </section>


    <!-- About Section -->
    <section id="about" class="py-5">
        <div class="container">
            <div class="text-center mb-4">
                <h5 class="text-muted">About Us</h5>
                <h2 class="fw-bold">Best Customer Experience</h2>
            </div>
            <div class="row align-items-center">
                <div class="col-md-6 text-center">
                    <img src="~/img/LeburuImg6.jpeg" alt="Chicks at Leburu Farm" class="img-fluid rounded-4 shadow" style="max-width: 80%; height: auto;">
                </div>
                <div class="col-md-6">
                    <h4 class="text-orange">WHO WE ARE</h4>
                    <p>
                        At Leburu Farm, our story begins with a deep-rooted love for poultry farming, where our commitment to quality and excellence in poultry farming is unmatched.
                        With years of experience and a passion for sustainable agriculture, we take pride in offering premium, ethically-raised poultry products to our customers.
                    </p>
                    <p>
                        We believe in transparency, and our commitment to humane and sustainable farming practices is evident in every aspect of our operation.
                        Join us on our journey, and let our passion for poultry elevate your dining experience.
                    </p>
                    <a href="#contact" class="btn btn-warning px-4 py-2 mt-2">Learn More</a>
                </div>
            </div>
        </div>
    </section>


    <!-- Products Section -->
    <section id="products" class="container my-5">
        <h2 class="text-center fw-bold">Explore<br>Our Products</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">

            <!-- Card 1 -->
            <div class="col">
                <div class="card h-100 shadow rounded-4">
                    <img src="~/img/Eggs.jpg" class="card-img-top" alt="Day old chicks">
                    <div class="card-body">
                        <h5 class="card-title text-orange-500 fw-semibold">Day old Lowman brown</h5>
                        <p class="card-text">
                            Leburu Poultry Farm is the premier destination for acquiring day-one layer and broiler chicks.
                            Ensuring robust genetics and optimal health, we provide the foundation for a thriving poultry enterprise.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col">
                <div class="card h-100 shadow rounded-4">
                    <img src="~/img/LeburuImg4.jpg" class="card-img-top" alt="Table Eggs">
                    <div class="card-body">
                        <h5 class="card-title text-orange-500 fw-semibold">Table Eggs</h5>
                        <p class="card-text">
                            Our eggs, cultivated with the utmost care and diligence, epitomize freshness and flavor. These eggs
                            exemplify the pinnacle of poultry produce.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col">
                <div class="card h-100 shadow rounded-4">
                    <img src="~/img/LeburuImg9.jpg" class="card-img-top" alt="Fertilized Eggs">
                    <div class="card-body">
                        <h5 class="card-title text-orange-500 fw-semibold">Fertilized Eggs</h5>
                        <p class="card-text">
                            Looking to hatch your own chicks? Our high-quality fertilized eggs have excellent hatch rates,
                            giving you the best start for your poultry venture.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Card 4 -->
            <div class="col">
                <div class="card h-100 shadow rounded-4">
                    <img src="~/img/LeburuImg6.jpeg" class="card-img-top" alt="Broiler chicks">
                    <div class="card-body">
                        <h5 class="card-title text-orange-500 fw-semibold">Broiler Chicks</h5>
                        <p class="card-text">
                            Healthy, fast-growing broiler chicks perfect for meat production. Our broilers are carefully selected
                            to thrive in a range of poultry systems.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Card 5 -->
            <div class="col">
                <div class="card h-100 shadow rounded-4">
                    <img src="~/img/PoultryImg11.jpg" class="card-img-top" alt="Layer birds">
                    <div class="card-body">
                        <h5 class="card-title text-orange-500 fw-semibold">Layer Birds</h5>
                        <p class="card-text">
                            Productive layer birds that offer consistent egg production. Ideal for small to medium poultry
                            operations looking to boost their egg supply.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Card 6 -->
            <div class="col">
                <div class="card h-100 shadow rounded-4">
                    <img src="~/img/PoultryImg12.jpg" class="card-img-top" alt="Poultry Feed">
                    <div class="card-body">
                        <h5 class="card-title text-orange-500 fw-semibold">Poultry Feed</h5>
                        <p class="card-text">
                            Top-quality poultry feed that promotes healthy growth and maximizes egg/meat output. Tailored for
                            both layers and broilers.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </section>


    <!-- Services Section -->
    <section id="services" class="py-5">
        <div class="container">
            <h2 class="text-center fw-bold mb-2">Poultry Farm Services</h2>
            <p class="text-center text-muted mb-5">What we offer</p>

            <div class="row g-4">
                <!-- Service 1 -->
                <div class="col-md-4">
                    <div class="p-4 text-center bg-white shadow rounded-4 h-100">
                        <img src="~/img/pngegg (1).png" alt="Consultation icon" class="mb-3" style="height: 50px;">
                        <h5 class="fw-bold">Consultations on starting a poultry farm</h5>
                        <p class="text-muted small">
                            Our team of seasoned experts provides invaluable insights into the nuances of starting and 
                            managing a poultry farm. From site selection to operational strategies, our consultations
                            pave the way for informed decisions.
                        </p>
                    </div>
                </div>

                <!-- Service 2 -->
                <div class="col-md-4">
                    <div class="p-4 text-center bg-white shadow rounded-4 h-100">
                        <img src="~/img/pngwing.com.png" alt="Finance icon" class="mb-3" style="height: 50px;">
                        <h5 class="fw-bold">Financial forecasting of running a farm</h5>
                        <p class="text-muted small">
                            Tailored to meet your specific needs, our customized poultry packages are perfect for 
                            businesses, events, and individuals looking for a personalized poultry experience. 
                            From bulk orders to specialty cuts, we cater to your unique requirements.
                        </p>
                    </div>
                </div>

                <!-- Service 3 -->
                <div class="col-md-4">
                    <div class="p-4 text-center bg-white shadow rounded-4 h-100">
                        <img src="~/img/pngwing.com (1).png" alt="Training icon" class="mb-3" style="height: 50px;">
                        <h5 class="fw-bold">Training The Youth</h5>
                        <p class="text-muted small">
                            Embark on an educational and entertaining journey with our guided poultry farm tours. 
                            Ideal for families, students, and anyone curious about sustainable farming practices.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Contact Section -->
    <section id="contact" class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Contact Us</h2>
                <p class="text-muted">Get in touch</p>
            </div>

            <div class="row justify-content-center">
                <!-- Contact Details -->
                <div class="col-lg-5 mb-4">
                    <p class="mb-1"><strong>Email:</strong> info@leburufarms.co.za</p>
                    <p class="mb-1"><strong>WhatsApp:</strong> +27 81 326 1724</p>
                    <p class="mb-2"><strong>Trading Hours</strong></p>
                    <p class="mb-1 px-2">Mon - Fri (07h:00 - 19h:00)</p>
                    <p class="mb-1 px-2">Saturday (07h:00 - 19h:00)</p>
                    <p class="mb-1 px-2">Sunday (07h:00 - 19h:00)</p>
                </div>

                <!-- Contact Form -->
                <div class="col-lg-6">
                    <h5 class="fw-bold mb-3"><i class="bi bi-send me-2"></i>Get a quote</h5>

                    <form>
                        <div class="mb-4">
                            <label for="name" class="form-label">Names</label>
                            <input type="text" class="form-control form-control-lg rounded-pill" id="name" placeholder="Write your names">
                        </div>

                        <div class="mb-4">
                            <label for="email" class="form-label">Mail</label>
                            <input type="email" class="form-control form-control-lg rounded-pill" id="email" placeholder="Write your email">
                        </div>

                        <div class="mb-4">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control form-control-lg rounded-4" id="message" rows="4" placeholder="Write your message"></textarea>
                        </div>

                        <button type="submit" class="btn btn-dark btn-lg rounded-pill px-4">
                            submit <i class="bi bi-box-arrow-up-right ms-1"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>



    <a href="https://wa.me/27650713269" class="whatsapp-float" target="_blank" title="Chat with us">
        <img src="~/img/whatsapp.png" alt="WhatsApp" />
    </a>
</body>
