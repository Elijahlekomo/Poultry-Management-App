@model Poultry_management_System.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h5><strong>Date:</strong> @Model.Date.ToString("yyyy/MM/dd")</h5>

    <h4 class="mt-4">Financial overview</h4>
    <div class="row text-center">
        <div class="col card p-3 m-2 shadow-sm">
            <strong>Total Monthly Profit</strong><br />
            <small>Income - Expense</small><br />
            <h4>R @Model.TotalMonthlyProfit.ToString("0.00")</h4>
        </div>
        <div class="col card p-3 m-2 shadow-sm">
            <strong>Total Monthly Income</strong><br />
            <h4>R @Model.TotalMonthlyIncome.ToString("0.00")</h4>
        </div>
        <div class="col card p-3 m-2 shadow-sm">
            <strong>Total Monthly Expense</strong><br />
            <h4>R @Model.TotalMonthlyExpense.ToString("0.00")</h4>
        </div>
    </div>

    <h4 class="mt-4">Financial overview daily</h4>
    <div class="row text-center">
        <div class="col card p-3 m-2 shadow-sm">
            <strong>Total Daily Profit</strong><br />
            <small>Income - Expense</small><br />
            <h4>R @Model.TotalDailyProfit.ToString("0.00")</h4>
        </div>
        <div class="col card p-3 m-2 shadow-sm">
            <strong>Total Daily Income</strong><br />
            <h4>R @Model.TotalDailyIncome.ToString("0.00")</h4>
        </div>
        <div class="col card p-3 m-2 shadow-sm">
            <strong>Total Daily Expense</strong><br />
            <h4>R @Model.TotalDailyExpense.ToString("0.00")</h4>
        </div>
    </div>

    <h4 class="mt-4">Daily Operations Summary</h4>
    <div class="row text-center">
        <div class="col card p-3 m-2 shadow-sm"><strong>Total Trays</strong><h3>@Model.TotalTrays</h3></div>
        <div class="col card p-3 m-2 shadow-sm"><strong>Sold Trays</strong><h3>@Model.SoldTrays</h3></div>
        <div class="col card p-3 m-2 shadow-sm"><strong>Leftover Eggs</strong><h3>@Model.LeftoverEggs</h3></div>
        <div class="col card p-3 m-2 shadow-sm"><strong>Damaged Eggs</strong><h3>@Model.DamagedEggs</h3></div>
        <div class="col card p-3 m-2 shadow-sm"><strong>Death Report</strong><h3>@Model.DeathReport</h3></div>
        <div class="col card p-3 m-2 shadow-sm"><strong>Total Feed Used</strong><h3>@Model.TotalFeedUsed</h3></div>
    </div>

    <h4 class="mt-4">Stock</h4>
    <div class="row text-center">
        <div class="col card p-3 m-2 shadow-sm"><strong>Total Chickens</strong><h3>@Model.TotalChickens</h3></div>
        <div class="col card p-3 m-2 shadow-sm"><strong>Total Feed</strong><h3>@Model.TotalFeedStock</h3></div>
    </div>
</div>
